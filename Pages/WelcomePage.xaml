<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="loginAppAS.WelcomePage"
             Title="WelcomePage">
    <StackLayout>
        <!-- Etykieta do wyświetlania imienia -->
        <Label x:Name="nameLabel" FontSize="24" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

        <!-- Etykieta do wyświetlania adresu e-mail -->
        <Label x:Name="emailLabel" FontSize="24" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

        <!-- Inne elementy UI, jeśli są potrzebne -->
    </StackLayout>
</ContentPage>
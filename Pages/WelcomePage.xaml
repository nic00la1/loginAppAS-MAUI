<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="loginAppAS.WelcomePage"
             Title="WelcomePage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <!-- First row contains the content (StackLayout) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Use a Frame to add shadow and enhance appearance -->
        <Frame Grid.Row="0" BackgroundColor="White">
            <StackLayout>
                <Label Text="Witaj!" FontSize="Header"/>
                <Label Text="Zalogowano pomyÅ›lnie" FontSize="Medium"/>
                <Image Source="user.png" Margin="20,40,20,15"/>
                    <Label x:Name="emailLabel" FontSize="24"
                         Margin="20,20,20,20"/>
                
            </StackLayout>
        </Frame>

        <!-- Second row contains the button -->
        <Button Grid.Row="1" Text="Wyloguj" Clicked="Wyloguj" VerticalOptions="End"
                Margin="20,20,20,20"/>
    </Grid>
</ContentPage>